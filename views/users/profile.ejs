<%- include(headerPartial); %>

<div class="container my-4">
    <div class="row">
        <div class="col-12 col-md-10 col-lg-8 mx-auto mb-5">
            <% if (typeof title !== 'undefined') { %>
            <%- include('../partials/title', {title}); %>
            <% } %>

            <div class="mb-5 px-4 py-4 shadow rounded font-size-125 text-shadow bg-rgba-dark">
                <div class="mb-3">
                    Your details are:
                </div>
                <table class="table table-responsive-sm text-white font-size-125">
                    <tbody>
                        <tr>
                            <td class="border-0">First name:</td>
                            <td class="border-0 font-weight-bold"><%= profile.firstName %></td>
                        </tr>
                        <tr>
                            <td>Surname:</td>
                            <td class="font-weight-bold"><%= profile.surname %></td>
                        </tr>
                        <tr>
                            <td>Email:</td>
                            <td class="font-weight-bold"><%= profile.email %></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12 col-md-10 col-lg-8 mx-auto mb-5">
            <h2 class="mb-4 text-shadow font-size-40px">Update Your Details</h2>
            <div class="mb-5 px-4 py-4 shadow rounded font-size-125 text-shadow bg-rgba-dark">
                <form action="/users/profile" method="post">
                    <div class="form-row">
                        <div class="form-group col-md-6 mb-4">
                            <label for="first-name">First name</label>
                            <input type="text" name="firstName" class="form-control font-size-125" id="first-name"
                                placeholder="First name" value="<%= profile.firstName %>">
                        </div>

                        <div class="form-group col-md-6 mb-4">
                            <label for="surname">Surname</label>
                            <input type="text" name="surname" class="form-control font-size-125" id="surname"
                                placeholder="Surname" value="<%= profile.surname %>">
                        </div>

                        <div class="form-group col-12 mb-4">
                            <label for="email">Email</label>
                            <input type="text" name="email" class="form-control font-size-125" id="email"
                                placeholder="Email" value="<%= profile.email %>">
                        </div>

                        <div class="form-group col-12 mb-4">
                            <label for="new-password">Update Password</label>
                            <input type="password" name="newPassword" class="form-control font-size-125"
                                id="new-password" autocomplete="new-password" value="">
                            <small class="form-text">Leave this field blank for your password to remain
                                unchanged.</small>
                        </div>
                    </div>

                    <div class="text-center">
                        <button class="btn btn-primary shadow">Update Profile</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<%- include(footerPartial); %>